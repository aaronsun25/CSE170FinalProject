<!doctype html>
<head>
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta name="apple-mobile-web-app-capable" content="yes">

   <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
   <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
   <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <link href="css/post.css" rel="stylesheet">
   <script src="js/post.js"></script>
</head>

<body>
          <div class="back">
           <button onclick="window.location.href = '/lost';"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
        </div>
    <form id="addPostForm" role="form" method="get" action="/add">
        <div>
          <h3>New Post</h3>
          </div>
        <div class="form-group">
          <br>
          <label for="name">Item Name:</label>
          <input type="text" class="form-control" id="name" name="name">
        </div>

        <div class="form-group">
          <label for="lost item or found item">Lost or Found:</label>
          <br/>
          <input type="button" id="LostBtn" class="btn btn-default" value="Lost Item" onclick="lost()"></input>
          <input type="button" id="FoundBtn" class="btn btn-default" value="Found Item" onclick="found()"></input>
          <input type="text" class="form-control" id="lost_found" placeholder="lost_found" name="lost_found" style="display:none;"></input>
        </div>

        <div class="form-group">
          <label for="description">Description:</label>
          <input type="text" class="form-control" id="description" name="description">
        </div>
        
        <div class="form-group">
          <label for="description">Last Seen / Dropped Off At:</label>
          <p class="op">(Optional)</p>
          <input type="text" class="form-control" id="lastseen" name="lastseen"></input>
        </div>
        <div class="form-group">
          <label for="contact">Contact Info:</label>
          <p class="extra">Name, Phone Number, Email</p>
          <input type="text" class="form-control" id="contact" name="contact">
        </div>

        <div class="form-group">
          <label for="image">Image:</label>
          <p class="op">(Optional)</p>
          <input type="url" class="form-control" id="image" name="image"><br><br>
          <label for="newDate"></label>
          <input type="submit" id="submitBtn" class="btn btn-default" value="Add Item" onclick="date()"></input>
        </div>
    </form>
</body>
